<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- todo Перенести конфигурацию зависимостей в аннотации -->

    <bean id="catalog" class="examplescatalog.catalog.MemoryCatalog">
        <constructor-arg>
            <bean class="examplescatalog.catalog.dircatalog.DirCatalog">
                <constructor-arg>
                    <bean class="examplescatalog.catalog.dircatalog.ProjectList">
                        <constructor-arg>
                            <bean class="examplescatalog.catalog.dircatalog.DirTreeWalker" init-method="process">
                                <constructor-arg value="#{settings.examplesRoot}"/>
                                <constructor-arg>
                                    <bean class="examplescatalog.catalog.dircatalog.ProjectFileFilter">
                                        <constructor-arg value="#{settings.projectFileMasks}"/>
                                    </bean>
                                </constructor-arg>
                                <constructor-arg>
                                    <bean class="examplescatalog.catalog.dircatalog.ProjectIdFileFilter">
                                        <constructor-arg value="#{settings.projectIdFilename}"/>
                                    </bean>
                                </constructor-arg>
                                <constructor-arg value="#{settings.projectIdFilename}"/>
                                <constructor-arg value="explorerCommand"/>
                            </bean>
                        </constructor-arg>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

</beans>